{
 "name": "@octopus-synapse/profile-ui",
 "version": "2.1.0",
 "description": "Design system components for Octopus Synapse profile platform - B&W aesthetic with tech area variants",
 "main": "./dist/index.js",
 "module": "./dist/index.mjs",
 "types": "./dist/index.d.ts",
 "exports": {
  ".": {
   "react-native": {
    "types": "./dist/mobile/index.d.ts",
    "import": "./dist/mobile/index.mjs",
    "require": "./dist/mobile/index.js"
   },
   "default": {
    "types": "./dist/web/index.d.ts",
    "import": "./dist/web/index.mjs",
    "require": "./dist/web/index.js"
   }
  },
  "./shared": {
   "types": "./dist/shared/index.d.ts",
   "import": "./dist/shared/index.mjs",
   "require": "./dist/shared/index.js"
  },
  "./web": {
   "types": "./dist/web/index.d.ts",
   "import": "./dist/web/index.mjs",
   "require": "./dist/web/index.js"
  },
  "./mobile": {
   "types": "./dist/mobile/index.d.ts",
   "import": "./dist/mobile/index.mjs",
   "require": "./dist/mobile/index.js"
  },
  "./tokens": {
   "types": "./dist/tokens/index.d.ts",
   "import": "./dist/tokens/index.mjs",
   "require": "./dist/tokens/index.js"
  },
  "./styles": {
   "types": "./dist/styles/index.d.ts",
   "import": "./dist/styles/index.mjs",
   "require": "./dist/styles/index.js"
  },
  "./utils": {
   "types": "./dist/utils/index.d.ts",
   "import": "./dist/utils/index.mjs",
   "require": "./dist/utils/index.js"
  },
  "./hooks": {
   "types": "./dist/hooks/index.d.ts",
   "import": "./dist/hooks/index.mjs",
   "require": "./dist/hooks/index.js"
  },
  "./styles/globals.css": "./dist/styles/globals.css"
 },
 "sideEffects": [
  "**/*.css"
 ],
 "files": [
  "dist",
  "README.md"
 ],
 "scripts": {
  "build": "tsup",
  "dev": "tsup --watch",
  "lint": "eslint src/",
  "lint:fast": "oxlint --react-plugin src/",
  "lint:fix": "eslint src/ --fix",
  "typecheck": "tsc --noEmit",
  "test": "bun test",
  "test:watch": "bun test --watch",
  "test:coverage": "bun test --coverage",
  "precommit": "bun run typecheck && bun run lint:fast && bun test",
  "ci:lint": "bun run lint",
  "clean": "rm -rf dist",
  "prepublishOnly": "bun run build",
  "prepare": "husky"
 },
 "peerDependencies": {
  "react": ">=18.0.0",
  "react-dom": ">=18.0.0",
  "react-native": ">=0.70.0"
 },
 "dependencies": {
  "class-variance-authority": "^0.7.1",
  "clsx": "^2.1.1",
  "tailwind-merge": "^2.6.0"
 },
 "devDependencies": {
  "@commitlint/cli": "^20.3.0",
  "@commitlint/config-conventional": "^20.3.0",
  "@happy-dom/global-registrator": "^20.0.11",
  "@testing-library/dom": "^10.4.0",
  "@testing-library/react": "^16.1.0",
  "@types/bun": "latest",
  "@types/node": "^22.10.2",
  "@types/react": "^19.0.2",
  "@types/react-dom": "^19.0.2",
  "@types/react-native": "^0.73.0",
  "@typescript-eslint/eslint-plugin": "^8.18.2",
  "@typescript-eslint/parser": "^8.18.2",
  "eslint": "^9.17.0",
  "eslint-plugin-react": "^7.37.2",
  "eslint-plugin-react-hooks": "^5.1.0",
  "husky": "^9.1.7",
  "oxlint": "^1.38.0",
  "react": "^19.0.0",
  "react-dom": "^19.0.0",
  "react-native": "^0.83.1",
  "tsup": "^8.3.5",
  "typescript": "^5.7.2"
 },
 "keywords": [
  "design-system",
  "react",
  "components",
  "ui",
  "octopus-synapse",
  "profile",
  "typescript",
  "tailwindcss"
 ],
 "repository": {
  "type": "git",
  "url": "git+https://github.com/octopus-synapse/profile-ui.git"
 },
 "author": "Octopus Synapse",
 "license": "MIT",
 "publishConfig": {
  "registry": "https://npm.pkg.github.com",
  "access": "public"
 }
}
